build --host_platform=@io_tweag_rules_nixpkgs//nixpkgs/platforms:host
build --crosstool_top=@nixpkgs_config_cc//:toolchain

# Set macOS deployment target to match the libraries
build --macos_minimum_os=11.3
build --copt=-mmacosx-version-min=11.3
build --linkopt=-mmacosx-version-min=11.3

build --cxxopt=-std=c++23
build --cxxopt=-DSPDLOG_USE_STD_FORMAT